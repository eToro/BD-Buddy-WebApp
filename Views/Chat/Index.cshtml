@{
    ViewData["Title"] = "Chat with Assistant";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }

        .chat-box {
            background-color: #1f1f1f;
            border-radius: 8px;
            padding: 20px;
            min-height: 300px;
            margin-bottom: 20px;
            overflow-y: scroll;
            max-height: 60vh;
        }

        .message {
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .user-message {
            background-color: #3a3a3a;
            color: #fff;
            text-align: left;
        }

        .assistant-message {
            background-color: #4a90e2;
            color: #fff;
            text-align: right;
        }

        .input-container {
            display: flex;
            align-items: center;
        }

            .input-container input {
                border-radius: 20px;
                background-color: #333;
                border: 1px solid #444;
                color: #fff;
                padding: 12px;
                width: 80%;
                margin-right: 10px;
            }

            .input-container button {
                background-color: #4a90e2;
                border: none;
                color: white;
                padding: 12px 20px;
                border-radius: 20px;
                cursor: pointer;
                font-size: 16px;
            }

                .input-container button:hover {
                    background-color: #357ab7;
                }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <div class="card bg-dark text-white shadow-lg">
                    <div class="card-header text-center">
                        <h4>Chat with Assistant</h4>
                    </div>
                    <div class="card-body">
                        <div class="chat-box">
                            @if (ViewData["AssistantResponse"] != null)
                            {
                                <div class="message assistant-message">
                                    <p>@ViewData["AssistantResponse"]</p>
                                </div>
                            }
                        </div>

                        <form method="post" asp-action="AskAssistant">
                            <div class="input-container">
                                <input type="text" name="userQuery" class="form-control" placeholder="Ask something..." required />
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
