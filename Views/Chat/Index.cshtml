@{
    ViewData["Title"] = "How can I help you?";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        background-image: url('/images/etoro_logo.png');
        background-size: auto;
        background-repeat: repeat;
        background-position: top left;
    }

    .container {
        background-color: rgba(31, 31, 31, 0.8);
        border-radius: 10px;
        padding: 20px;
    }

    #chat-window {
        background-color: rgba(43, 43, 43, 0.8);
        color: #ffffff;
        border: 1px solid #444;
        height: 400px;
        overflow-y: auto;
        border-radius: 10px;
    }

    #chat-form {
        display: flex;
        margin-top: 10px;
    }

    .form-control {
        background-color: #333;
        border: 1px solid #555;
        color: #fff;
    }

        .form-control:focus {
            background-color: #444;
            border-color: #888;
            color: #fff;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .mb-2 {
        margin-bottom: 0.5rem;
    }

    .border-rounded {
        border-radius: 10px;
    }
</style>

<div class="container mt-5 text-center">
    <img src="/images/bd-buddy.png" alt="BD Buddy" class="mb-3" style="width: 280px; height: auto; border-radius: 50%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">

    <div id="chat-window" class="border-rounded p-3" style="height: 400px; overflow-y: auto;">
        @if (ViewData["AssistantResponse"] != null)
        {
            <div class="mb-2"><strong>BD Buddy:</strong> @Html.Raw(ViewData["AssistantResponse"].ToString())</div>
        }
    </div>

    <form id="chat-form" asp-action="AskAssistant" method="post" class="mt-3 d-flex">
        <input type="text" id="user-query" name="userQuery" class="form-control me-2" placeholder="Type your message here..." />
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

<script>
    $(document).ready(function () {
    @if (ViewData["AssistantResponse"] != null)
    {
        <text>
                $('#chat-window').append('<div class="mb-2"><strong>BD Buddy:</strong> @Html.Raw(ViewData["AssistantResponse"].ToString())</div>');
        </text>
    }

            $('#chat-form').submit(function (event) {
                event.preventDefault();
                const userInput = $('#user-query').val();
                if (userInput.trim() === '') return;

                $('#chat-window').append(`<div class="mb-2"><strong>You:</strong> ${userInput}</div>`);
                $('#user-query').val('');

                $.post('/Chat/AskAssistant', { userQuery: userInput }, function (data) {
                    $('#chat-window').append(`<div class="mb-2"><strong>BD Buddy:</strong> ${data.response}</div>`);
                    $('#chat-window').scrollTop($('#chat-window')[0].scrollHeight);
                });
            });
    });
</script>
