@{
    ViewData["Title"] = "Chat with Assistant";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container mt-5">
    <h2 class="text-center mb-4">Chat Interface</h2>
    <div id="chat-window" class="border rounded p-3 bg-light" style="height: 400px; overflow-y: auto;">
        @if (ViewData["AssistantResponse"] != null)
        {
            <div class="mb-2"><strong>Bot:</strong> @ViewData["AssistantResponse"]</div>
        }
    </div>
    <form id="chat-form" asp-action="AskAssistant" method="post" class="mt-3 d-flex">
        <input type="text" id="user-query" name="userQuery" class="form-control me-2" placeholder="Type your message here..." />
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#chat-form').submit(function (event) {
            event.preventDefault();
            const userInput = $('#user-query').val();
            if (userInput.trim() === '') return;

            $('#chat-window').append(`<div class="mb-2"><strong>You:</strong> ${userInput}</div>`);
            $('#user-query').val('');

            $.post('/Chat/AskAssistant', { userQuery: userInput }, function (data) {
                $('#chat-window').append(`<div class="mb-2"><strong>Bot:</strong> ${data.response}</div>`);
            });
        });
    });
</script>