@{
    ViewData["Title"] = "How can I help you?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="icon" href="/images/bd-buddy.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body style="background-color: #121212; color: #ffffff; background-image: url('/images/etoro_logo.png'); background-size: auto; background-position: center 80%; background-repeat: no-repeat;">
    <div class="container mt-5 text-center">
        <img src="/images/bd-buddy.png" alt="BD Buddy" class="mb-3" style="width: 280px; height: auto; border-radius: 50%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">

        <div id="chat-window" class="border-rounded p-3" style="height: 400px; overflow-y: auto; background-color: rgba(97, 97, 97, 0.8); border: 1px solid #444; color: #ffffff;">
            @if (ViewData["AssistantResponse"] != null)
            {
                <div class="mb-2" style="padding: 10px; border-radius: 5px; background-color: rgba(0, 0, 0, 0.3);">
                    <strong>BD Buddy:</strong> @Html.Raw(ViewData["AssistantResponse"].ToString())
                </div>
            }
        </div>

        <form id="chat-form" asp-action="AskAssistant" method="post" class="mt-3 d-flex">
            <input type="text" id="user-query" name="userQuery" class="form-control me-2" placeholder="Type your message here..." />
            <button type="submit" class="btn btn-primary" style="background-color: green; border-color: green;">Send</button>
        </form>
    </div>

    <script>
        $(document).ready(function () {
        @if (ViewData["AssistantResponse"] != null)
        {
            <text>
                    $('#chat-window').append('<div class="mb-2" style="padding: 10px; border-radius: 5px; background-color: rgba(0, 0, 0, 0.3);"><strong>BD Buddy:</strong> @Html.Raw(ViewData["AssistantResponse"].ToString())</div>');
            </text>
        }

                $('#chat-form').submit(function (event) {
                    event.preventDefault();
                    const userInput = $('#user-query').val();
                    if (userInput.trim() === '') return;

                    $('#chat-window').append(`<div class="mb-2" style="padding: 10px; border-radius: 5px; background-color: rgba(0, 0, 0, 0.2);"><strong>You:</strong> ${userInput}</div>`);
                    $('#user-query').val('');

                    $.post('/Chat/AskAssistant', { userQuery: userInput }, function (data) {
                        if (data.response.imageUrl) {
                            $('#chat-window').append(`<div class="mb-2" style="padding: 10px; border-radius: 5px; background-color: rgba(0, 0, 0, 0.3);"><strong>BD Buddy:</strong><br><img src="${data.response.imageUrl}" alt="Assistant Image" style="max-width: 100%; height: auto;"></div>`);
                        } else {
                            $('#chat-window').append(`<div class="mb-2" style="padding: 10px; border-radius: 5px; background-color: rgba(0, 0, 0, 0.3);"><strong>BD Buddy:</strong> ${data.response}</div>`);
                        }
                        $('#chat-window').scrollTop($('#chat-window')[0].scrollHeight);
                    });

                });
        });
    </script>
</body>
</html>
