@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container mt-5">
    <h2 class="text-center mb-4">Chat Interface</h2>
    <div id="chat-window" class="border rounded p-3 bg-light" style="height: 400px; overflow-y: auto;">
        <!-- Chat messages will appear here -->
    </div>
    <form id="chat-form" class="mt-3 d-flex">
        <input type="text" id="user-input" name="userInput" class="form-control me-2" placeholder="Type your message..." />
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#chat-form').submit(function (event) {
            event.preventDefault();
            const userInput = $('#user-input').val();

            if (userInput.trim() === '') return;

            $('#chat-window').append(`<div class="mb-2"><strong>You:</strong> ${userInput}</div>`);
            $('#user-input').val('');

            $.post('/Home/GetResponse', { userInput: userInput }, function (data) {
                $('#chat-window').append(`<div class="mb-2"><strong>Bot:</strong> ${data.response}</div>`);
            });
        });
    });
</script>
